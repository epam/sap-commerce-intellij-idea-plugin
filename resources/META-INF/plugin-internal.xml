<idea-plugin>

    <extensions defaultExtensionNs="sap.commerce.toolset">
        <project.preImportConfigurator implementation="sap.commerce.toolset.project.configurator.UltimateFeaturesConfigurator"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="[y] SAP Commerce" displayType="BALLOON" isLogByDefault="true"/>

        <errorHandler implementation="com.intellij.diagnostic.JetBrainsMarketplaceErrorReportSubmitter"/>

        <toolWindow id="SAP CX" icon="/icons/toolWindow.svg" anchor="bottom" doNotActivateOnStart="true" canCloseContents="true"
                    factoryClass="sap.commerce.toolset.toolwindow.HybrisToolWindowFactory"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <treeStructureProvider id="hybris.project.root.tree.structure.provider" order="first"
                               implementation="sap.commerce.toolset.project.view.HybrisProjectView"/>
        <projectViewNodeDecorator order="last" implementation="sap.commerce.toolset.project.view.HybrisProjectViewNodeDecorator"/>
        <projectService serviceInterface="com.intellij.ide.projectView.impl.nodes.ProjectViewDirectoryHelper"
                        serviceImplementation="sap.commerce.toolset.project.view.impl.HybrisProjectViewDirectoryHelper"
                        order="last"
                        overrides="true"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <vfs.asyncListener implementation="sap.commerce.toolset.meta.event.MetaSystemFileListener"/>
        <psi.treeChangeListener implementation="sap.commerce.toolset.meta.event.MetaSystemPsiTreeChangeListener"/>
        <editorFactoryListener implementation="sap.commerce.toolset.editor.event.HybrisEditorFactoryListener"/>
        <fileEditorProvider implementation="sap.commerce.toolset.editor.HybrisSplitFileEditorProvider"/>
    </extensions>

    <!-- Language injections -->
    <extensions defaultExtensionNs="com.intellij">
        <languageInjector implementation="sap.commerce.toolset.codeInsight.injection.FlexibleSearchLanguageInjector"/>
        <languageInjector implementation="sap.commerce.toolset.codeInsight.injection.XmlToImpExLanguageInjector"/>
        <languageInjector implementation="sap.commerce.toolset.codeInsight.injection.PolyglotQueryLanguageInjector"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity order="first" id="hybrisProjectImport" implementation="sap.commerce.toolset.startup.HybrisProjectImportStartupActivity"/>
        <postStartupActivity order="after hybrisProjectImport" implementation="sap.commerce.toolset.startup.HybrisProjectStructureStartupActivity"/>
        <postStartupActivity order="after hybrisProjectImport" implementation="sap.commerce.toolset.startup.WhatsNewStartupActivity"/>
        <backgroundPostStartupActivity implementation="sap.commerce.toolset.startup.HybrisPluginUpdateCheckerStartupActivity"/>
        <backgroundPostStartupActivity implementation="sap.commerce.toolset.startup.PreLoadSystemsStartupActivity"/>
    </extensions>

    <actions>
        <!--        <action id="GenerateDomModel"-->
        <!--                class="sap.commerce.toolset.typeSystem.model.generator.GenerateDomModelAction"-->
        <!--                text="Generate DOM Model...">-->
        <!--            <add-to-group group-id="ToolsMenu" anchor="last"/>-->
        <!--        </action>-->
    </actions>

</idea-plugin>
