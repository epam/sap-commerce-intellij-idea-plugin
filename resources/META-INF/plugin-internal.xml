<idea-plugin>
    <extensions defaultExtensionNs="com.intellij">

        <notificationGroup id="[y] SAP Commerce" displayType="BALLOON" isLogByDefault="true"/>

        <indexedRootsProvider implementation="sap.commerce.toolset.indexing.HybrisProjectRootIndexedRootsProvider"/>

        <treeStructureProvider id="hybris.project.root.tree.structure.provider" order="first"
                               implementation="sap.commerce.toolset.project.view.HybrisProjectView"/>

        <projectViewNodeDecorator order="last" implementation="sap.commerce.toolset.project.view.HybrisProjectViewNodeDecorator"/>

        <psi.referenceContributor language="XML" implementation="sap.commerce.toolset.cockpitNG.psi.contributor.CngReferenceContributor"/>

        <projectService serviceInterface="com.intellij.ide.projectView.impl.nodes.ProjectViewDirectoryHelper"
                        serviceImplementation="sap.commerce.toolset.project.view.impl.HybrisProjectViewDirectoryHelper"
                        order="last"
                        overrides="true"/>

        <gotoClassContributor implementation="sap.commerce.toolset.gotoClass.CustomGotoClassContributor"/>
        <directoryIndexExcludePolicy implementation="sap.commerce.toolset.project.indexing.HybrisDirectoryIndexExcludePolicy"/>

        <projectConfigurable id="hybris.project.integrations.settings" parentId="hybris.project.settings"
                             nonDefaultProject="true" dynamic="true"
                             displayName="Integrations" order="first"
                             provider="sap.commerce.toolset.options.ProjectIntegrationsSettingsConfigurableProvider"/>

        <toolWindow id="SAP CX" icon="/icons/toolWindow.svg" anchor="bottom" doNotActivateOnStart="true" canCloseContents="true"
                    factoryClass="sap.commerce.toolset.toolwindow.HybrisToolWindowFactory"/>

        <iconProvider order="first" implementation="sap.commerce.toolset.project.HybrisProjectIconProvider"/>

        <errorHandler implementation="com.intellij.diagnostic.JetBrainsMarketplaceErrorReportSubmitter"/>

        <fileEditorProvider implementation="sap.commerce.toolset.editor.HybrisSplitFileEditorProvider"/>

        <!-- Language injections -->
        <languageInjector implementation="sap.commerce.toolset.codeInsight.injection.FlexibleSearchLanguageInjector"/>
        <languageInjector implementation="sap.commerce.toolset.codeInsight.injection.ImpexXmlLanguageInjector"/>
        <languageInjector implementation="sap.commerce.toolset.codeInsight.injection.PolyglotQueryLanguageInjector"/>
    </extensions>

    <actions>
        <group id="HybrisToolsActions"
               text="[y] SAP Commerce"
               popup="true"
               class="sap.commerce.toolset.actionSystem.HybrisToolsActionGroup">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </group>
        <!--        <action id="GenerateDomModel"-->
        <!--                class="sap.commerce.toolset.typeSystem.model.generator.GenerateDomModelAction"-->
        <!--                text="Generate DOM Model...">-->
        <!--            <add-to-group group-id="ToolsMenu" anchor="last"/>-->
        <!--        </action>-->
    </actions>

</idea-plugin>
