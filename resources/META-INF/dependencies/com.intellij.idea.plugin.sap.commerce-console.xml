<idea-plugin>

    <actions>
        <group id="hybris.console.actionGroup">
            <reference ref="hybris.hac.chooseConnection"/>
            <action id="hybris.hac.console.executeStatement"
                    class="com.intellij.idea.plugin.hybris.tools.remote.console.actions.ConsoleExecuteStatementAction">
                <keyboard-shortcut keymap="$default" first-keystroke="alt ENTER"/>
            </action>
            <action id="hybris.hac.console.impex.validate"
                    class="com.intellij.idea.plugin.hybris.tools.remote.console.actions.ConsoleImpExValidateAction"/>
            <action id="hybris.hac.console.clearAll"
                    class="com.intellij.idea.plugin.hybris.tools.remote.console.actions.ConsoleClearAllAction"/>
        </group>
    </actions>
</idea-plugin>
