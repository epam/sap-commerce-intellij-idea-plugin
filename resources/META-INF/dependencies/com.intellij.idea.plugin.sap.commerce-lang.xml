<idea-plugin>

    <extensions defaultExtensionNs="com.intellij">
        <vfs.asyncListener implementation="sap.commerce.toolset.vfs.listeners.MetaSystemsAsyncFileListener"/>
        <psi.treeChangeListener implementation="sap.commerce.toolset.psi.listeners.PsiTreeChangeListener"/>

        <!-- ####################################################################################################### -->
        <!--                                        Run Contributors                                                 -->
        <!-- ####################################################################################################### -->
        <runLineMarkerContributor language="XML"
                                  implementationClass="sap.commerce.toolset.execution.lineMarker.RefreshProjectRunLineMarkerContributor"/>

        <!-- ####################################################################################################### -->
        <!--                                            Facet                                                        -->
        <!-- ####################################################################################################### -->

        <facetType implementation="sap.commerce.toolset.project.facet.YFacetType"/>

        <postStartupActivity order="first" id="hybrisProjectImport" implementation="sap.commerce.toolset.startup.HybrisProjectImportStartupActivity"/>
        <postStartupActivity order="after hybrisProjectImport" implementation="sap.commerce.toolset.startup.HybrisProjectStructureStartupActivity"/>
        <postStartupActivity order="after hybrisProjectImport" implementation="sap.commerce.toolset.startup.HybrisJavaTypeRenderersStartupActivity"/>
        <postStartupActivity order="after hybrisProjectImport" implementation="sap.commerce.toolset.startup.WhatsNewStartupActivity"/>
        <backgroundPostStartupActivity implementation="sap.commerce.toolset.startup.HybrisPluginUpdateCheckerStartupActivity"/>
        <backgroundPostStartupActivity implementation="sap.commerce.toolset.startup.PreLoadSystemsStartupActivity"/>
        <backgroundPostStartupActivity implementation="sap.commerce.toolset.ccv2.startup.CCv2EventsSubscriberStartupActivity"/>

        <searchEverywhereContributor implementation="sap.commerce.toolset.searcheverywhere.SearchEverywhereContributor$Factory"/>

        <editorFactoryListener implementation="sap.commerce.toolset.editor.event.HybrisEditorFactoryListener"/>
    </extensions>

    <actions>
        <action id="File.yRefresh" class="sap.commerce.toolset.project.actions.ProjectRefreshAction"
                text="Refresh SAP Commerce Project"
                description="Re-imports the current hybris project with default values">
            <add-to-group group-id="FileMenu" anchor="after" relative-to-action="InvalidateCaches"/>
        </action>

        <action id="GotoType" class="sap.commerce.toolset.project.actions.GotoTypeAction"
                text="SAP Type...">
            <keyboard-shortcut first-keystroke="control shift H" keymap="$default"/>
            <add-to-group group-id="GoToTargetEx"/>
        </action>

        <action id="hybris.hac.configureConnection" class="sap.commerce.toolset.actions.ConfigureHacConnectionAction"/>

        <group id="hybris.hac.chooseConnection" popup="true" searchable="false"
               class="sap.commerce.toolset.actions.HacChooseConnectionAction">
            <action class="sap.commerce.toolset.actions.AddHacConnectionAction"/>
            <action class="sap.commerce.toolset.actions.EditActiveHacConnectionAction"/>
            <reference ref="hybris.hac.configureConnection"/>
        </group>
    </actions>

</idea-plugin>
