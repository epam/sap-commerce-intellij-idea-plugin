<idea-plugin>

    <extensions defaultExtensionNs="com.intellij">

        <languageInjector implementation="sap.commerce.toolset.psi.injector.GroovyLanguageInjector"/>

        <projectConfigurable id="hybris.project.groovy.settings" parentId="hybris.project.settings"
                             nonDefaultProject="true" dynamic="true"
                             bundle="i18n.HybrisBundle" key="hybris.settings.project.groovy.title"
                             provider="sap.commerce.toolset.groovy.settings.options.ProjectGroovySettingsConfigurableProvider"/>

        <applicationService serviceImplementation="sap.commerce.toolset.groovy.file.GroovyFileToolbarInstaller"/>
    </extensions>

    <actions>
        <group id="hybris.groovy.toolbar.left">
            <action id="hybris.groovy.execute" class="sap.commerce.toolset.groovy.actions.GroovyExecuteAction">
                <keyboard-shortcut first-keystroke="control shift alt ENTER" keymap="$default"/>
            </action>
            <action id="hybris.groovy.openQuery" class="sap.commerce.toolset.groovy.actions.GroovyOpenQueryAction"/>
            <separator/>
            <action class="sap.commerce.toolset.groovy.actions.GroovyToggleInEditorResultsAction"/>
            <separator/>
            <action id="hybris.groovy.openSettings" class="sap.commerce.toolset.groovy.actions.GroovyOpenSettingsAction"/>
            <separator/>

            <group id="hybris.groovy.toolbar.tx" popup="true"
                   class="sap.commerce.toolset.groovy.actions.GroovyTransactionModeActionGroup">
                <separator key="hybris.groovy.actions.transaction.mode.separator"/>
                <action id="hybris.groovy.tx.commit" class="sap.commerce.toolset.groovy.actions.GroovyCommitTransactionAction"/>
                <action id="hybris.groovy.tx.execute" class="sap.commerce.toolset.groovy.actions.GroovyRollbackTransactionAction"/>
            </group>

            <group id="hybris.groovy.toolbar.mode" popup="true"
                   class="sap.commerce.toolset.groovy.actions.GroovyExecutionModeActionGroup">
                <separator key="hybris.groovy.actions.executionMode.separator"/>
                <action class="sap.commerce.toolset.groovy.actions.GroovyAutoReplicaSelectionModeAction"/>
                <action class="sap.commerce.toolset.groovy.actions.GroovyCCv2ReplicaSelectionModeAction"/>
                <action class="sap.commerce.toolset.groovy.actions.GroovyManualReplicaSelectionModeAction"/>
            </group>
        </group>
        <group id="hybris.groovy.toolbar.right">
            <reference ref="hybris.hac.chooseConnection"/>
        </group>
    </actions>

</idea-plugin>
