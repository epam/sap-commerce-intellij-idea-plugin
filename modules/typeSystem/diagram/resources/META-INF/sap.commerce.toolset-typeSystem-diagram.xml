<idea-plugin>

    <extensions defaultExtensionNs="com.intellij">
        <additionalTextAttributes scheme="Default" file="colorSchemes/TSDiagramDefault.xml"/>
        <additionalTextAttributes scheme="Darcula" file="colorSchemes/TSDiagramDarcula.xml"/>

        <diagram.Provider id="HybrisTypeSystemDependencies"
                          implementation="sap.commerce.toolset.typeSystem.diagram.TSDiagramProvider"/>

        <runLineMarkerContributor language="XML" implementationClass="sap.commerce.toolset.typeSystem.execution.lineMarker.ShowTSDiagramRunLineMarkerContributor"/>
    </extensions>

    <actions>
        <action id="ShowTypeSystemDiagram"
                class="sap.commerce.toolset.typeSystem.actionSystem.ShowTypeSystemDiagramAction"
                text="Show Type System Diagram">
            <add-to-group group-id="HybrisToolsActions"/>
        </action>

        <group id="Diagram.Hybris.TypeSystem.Actions">
            <action id="Diagram.Hybris.TypeSystem.Actions.OpenSettings"
                    class="sap.commerce.toolset.typeSystem.actionSystem.OpenSettingsDiagramAction"/>
            <separator/>
            <action id="Diagram.Hybris.TypeSystem.Actions.RestoreRemovedNodes"
                    class="sap.commerce.toolset.typeSystem.actionSystem.RestoreRemovedNodesDiagramAction"/>
            <action id="Diagram.Hybris.TypeSystem.Actions.ExpandAll"
                    class="sap.commerce.toolset.typeSystem.actionSystem.ExpandAllDiagramAction"/>
            <action id="Diagram.Hybris.TypeSystem.Actions.CollapseAll"
                    class="sap.commerce.toolset.typeSystem.actionSystem.CollapseAllDiagramAction"/>
        </group>

        <group id="Diagram.Hybris.TypeSystem.Node.Actions">
            <action id="Diagram.Hybris.TypeSystem.Node.Actions.ExcludeTypeName"
                    class="sap.commerce.toolset.typeSystem.actionSystem.ExcludeTypeNameDiagramAction">
                <keyboard-shortcut first-keystroke="ctrl meta pressed E" keymap="$default"/>
            </action>
        </group>
    </actions>

</idea-plugin>
