<idea-plugin>

    <extensions defaultExtensionNs="sap.commerce.toolset">
        <ui.toolWindowProvider implementation="sap.commerce.toolset.beanSystem.ui.BSToolWindowContentProvider"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <xmlStructureViewBuilderProvider order="first" implementation="sap.commerce.toolset.beanSystem.structureView.BSXmlStructureViewBuilderProvider"/>

        <codeFoldingOptionsProvider instance="sap.commerce.toolset.beanSystem.options.BSCodeFoldingOptionsProvider"/>
        <applicationService serviceImplementation="sap.commerce.toolset.beanSystem.codeInsight.completion.provider.BSClassCompletionProvider"/>
    </extensions>

    <actions>
        <action id="sap.commerce.toolset.beanSystem.goToDeclaration"
                class="sap.commerce.toolset.beanSystem.actionSystem.GoToDeclarationBSNodeAction"
                use-shortcut-of="GotoDeclaration"/>

        <group id="sap.commerce.toolset.beanSystem.viewOptions" searchable="false"
               text="View Options" popup="true"
               icon="AllIcons.Actions.Show">
            <separator text="Show"/>
            <action class="sap.commerce.toolset.beanSystem.actionSystem.BSShowOnlyCustomAction"/>
            <action class="sap.commerce.toolset.beanSystem.actionSystem.BSShowOnlyDeprecatedAction"/>
            <separator text="-- Enum --"/>
            <action class="sap.commerce.toolset.beanSystem.actionSystem.BSShowMetaEnumValuesAction"/>
            <separator text="-- Bean --"/>
            <action class="sap.commerce.toolset.beanSystem.actionSystem.BSShowMetaBeanPropertiesAction"/>
        </group>

        <group id="BSView.ToolWindow.TreePopup">
            <reference ref="sap.commerce.toolset.beanSystem.goToDeclaration"/>
        </group>

        <group id="BSView.ToolWindow.TablePopup">
            <action class="sap.commerce.toolset.beanSystem.actionSystem.GoToDeclarationBSTableAction"
                    use-shortcut-of="GotoDeclaration"/>
        </group>
    </actions>

</idea-plugin>
