<idea-plugin>

    <extensions defaultExtensionNs="com.intellij">
        <additionalTextAttributes scheme="Default" file="colorSchemes/ModuleDiagramDefault.xml"/>
        <additionalTextAttributes scheme="Darcula" file="colorSchemes/ModuleDiagramDarcula.xml"/>

        <diagram.Provider id="HybrisModuleDependencies"
                          implementation="sap.commerce.toolset.project.diagram.ModuleDepDiagramProvider"/>

        <runLineMarkerContributor language="XML" implementationClass="sap.commerce.toolset.project.diagram.execution.lineMarker.ShowModuleDepDiagramRunLineMarkerContributor"/>
    </extensions>

    <actions>
        <action id="ShowModuleDependencyDiagram"
                class="sap.commerce.toolset.project.actionSystem.ShowModuleDependencyDiagramAction"
                text="Show Module Dependency Diagram"
                icon="AllIcons.FileTypes.Diagram">
            <add-to-group group-id="HybrisToolsActions"/>
        </action>
    </actions>

</idea-plugin>
