<idea-plugin>

    <extensions defaultExtensionNs="sap.commerce.toolset">
        <project.importConfigurator order="first" id="applicationSettingsConfigurator"
                                    implementation="sap.commerce.toolset.project.configurator.ApplicationSettingsConfigurator"/>
        <project.importConfigurator order="after applicationSettingsConfigurator" id="projectSettingsConfigurator"
                                    implementation="sap.commerce.toolset.project.configurator.ProjectSettingsConfigurator"/>
        <project.importConfigurator order="after projectSettingsConfigurator" id="projectModulesDirectoryConfigurator"
                                    implementation="sap.commerce.toolset.project.configurator.ProjectModulesDirectoryConfigurator"/>
        <project.importConfigurator order="after projectModulesDirectoryConfigurator"
                                    implementation="sap.commerce.toolset.project.configurator.ProjectPostImportBulkConfigurator"/>
        <project.importConfigurator implementation="sap.commerce.toolset.project.configurator.GroupModuleConfigurator"/>
        <project.importConfigurator implementation="sap.commerce.toolset.project.configurator.ProjectDictionaryConfigurator"/>
        <project.importConfigurator implementation="sap.commerce.toolset.project.configurator.ProjectLibrariesConfigurator"/>
        <project.importConfigurator implementation="sap.commerce.toolset.project.configurator.ProjectEncodingConfigurator"/>

        <project.importConfigurator order="before modulesDependenciesConfigurator"
                                    implementation="sap.commerce.toolset.project.configurator.ModulesConfigurator"/>
        <project.importConfigurator order="last" id="modulesDependenciesConfigurator"
                                    implementation="sap.commerce.toolset.project.configurator.ModulesDependenciesConfigurator"/>

        <project.importConfigurator implementation="sap.commerce.toolset.project.configurator.ProjectIconConfigurator"/>

        <project.postImportConfigurator implementation="sap.commerce.toolset.project.configurator.YFacetConfigurator"/>

        <project.whenSmartConfigurator implementation="sap.commerce.toolset.project.configurator.VersionControlSystemConfigurator"/>
        <project.postImportAsyncConfigurator implementation="sap.commerce.toolset.project.configurator.SearchScopeConfigurator"/>
        <project.postImportAsyncConfigurator order="last" implementation="sap.commerce.toolset.project.configurator.ExtensionDescriptorsConfigurator"/>

        <project.refreshConfigurator order="first" id="saveDocumentsProjectRefreshConfigurator"
                                     implementation="sap.commerce.toolset.project.configurator.SaveDocumentsProjectRefreshConfigurator"/>
        <project.refreshConfigurator implementation="sap.commerce.toolset.project.configurator.ResetCacheProjectRefreshConfigurator"/>

        <project.module.descriptorProvider order="first" id="configModuleDescriptorProvider"
                                           implementation="sap.commerce.toolset.project.descriptor.provider.ConfigModuleDescriptorProvider"/>
        <project.module.descriptorProvider order="after configModuleDescriptorProvider" id="platformModuleDescriptorProvider"
                                           implementation="sap.commerce.toolset.project.descriptor.provider.PlatformModuleDescriptorProvider"/>
        <project.module.descriptorProvider order="after platformModuleDescriptorProvider" id="yCoreExtModuleDescriptorProvider"
                                           implementation="sap.commerce.toolset.project.descriptor.provider.YCoreExtModuleDescriptorProvider"/>
        <project.module.descriptorProvider order="after yCoreExtModuleDescriptorProvider" id="yHacExtModuleDescriptorProvider"
                                           implementation="sap.commerce.toolset.project.descriptor.provider.YHacExtModuleDescriptorProvider"/>
        <project.module.descriptorProvider order="after yHacExtModuleDescriptorProvider" id="yHmcExtModuleDescriptorProvider"
                                           implementation="sap.commerce.toolset.project.descriptor.provider.YHmcExtModuleDescriptorProvider"/>
        <project.module.descriptorProvider order="after yHmcExtModuleDescriptorProvider" id="yBackofficeModuleDescriptorProvider"
                                           implementation="sap.commerce.toolset.project.descriptor.provider.YBackofficeModuleDescriptorProvider"/>
        <project.module.descriptorProvider order="after yBackofficeModuleDescriptorProvider" id="yPlatformExtModuleDescriptorProvider"
                                           implementation="sap.commerce.toolset.project.descriptor.provider.YPlatformExtModuleDescriptorProvider"/>
        <project.module.descriptorProvider order="after yPlatformExtModuleDescriptorProvider" id="yOotbRegularModuleDescriptorProvider"
                                           implementation="sap.commerce.toolset.project.descriptor.provider.YOotbRegularModuleDescriptorProvider"/>
        <project.module.descriptorProvider order="after yOotbRegularModuleDescriptorProvider" id="yCustomRegularModuleDescriptorProvider"
                                           implementation="sap.commerce.toolset.project.descriptor.provider.YCustomRegularModuleDescriptorProvider"/>

        <project.module.rootResolver order="first" id="yExtModuleRootResolver"
                                     implementation="sap.commerce.toolset.project.module.YExtModuleRootResolver"/>
        <project.module.rootResolver order="after yExtModuleRootResolver" id="yOotbModuleRootResolver"
                                     implementation="sap.commerce.toolset.project.module.YOotbModuleRootResolver"/>
        <project.module.rootResolver order="after yOotbModuleRootResolver" id="yPlatformModuleRootResolver"
                                     implementation="sap.commerce.toolset.project.module.YPlatformModuleRootResolver"/>
        <project.module.rootResolver order="after yPlatformModuleRootResolver" id="yConfigModuleRootResolver"
                                     implementation="sap.commerce.toolset.project.module.YConfigModuleRootResolver"/>
        <project.module.rootResolver order="after yConfigModuleRootResolver" id="yCustomModuleRootResolver"
                                     implementation="sap.commerce.toolset.project.module.YCustomModuleRootResolver"/>

        <project.storage.cleanupConfigurator order="first" id="cleanupLibrariesStorageConfigurator"
                                             implementation="sap.commerce.toolset.project.configurator.entities.CleanupLibrariesStorageConfigurator"/>
        <project.storage.cleanupConfigurator order="after cleanupLibrariesStorageConfigurator" id="cleanupModulesStorageConfigurator"
                                             implementation="sap.commerce.toolset.project.configurator.entities.CleanupModulesStorageConfigurator"/>
        <project.storage.cleanupConfigurator order="after cleanupModulesStorageConfigurator" id="cleanupFacetsStorageConfigurator"
                                             implementation="sap.commerce.toolset.project.configurator.entities.CleanupFacetsStorageConfigurator"/>

        <project.storage.saveConfigurator order="first" id="saveLibrariesStorageConfigurator"
                                          implementation="sap.commerce.toolset.project.configurator.entities.SaveLibrariesStorageConfigurator"/>
        <project.storage.saveConfigurator order="after saveLibrariesStorageConfigurator" id="saveModulesStorageConfigurator"
                                          implementation="sap.commerce.toolset.project.configurator.entities.SaveModulesStorageConfigurator"/>
        <project.storage.saveConfigurator order="last"
                                          implementation="sap.commerce.toolset.project.configurator.ModulesMappingConfigurator"/>
    </extensions>

</idea-plugin>
