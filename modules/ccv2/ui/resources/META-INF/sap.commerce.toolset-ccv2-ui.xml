<idea-plugin>

    <extensions defaultExtensionNs="com.intellij">
        <webHelpProvider implementation="sap.commerce.toolset.ccv2.help.CCv2WebHelpProvider"/>

        <projectConfigurable id="sap.commerce.toolset.ccv2.exec.settings" parentId="hybris.project.settings"
                             nonDefaultProject="true" dynamic="true"
                             displayName="CCv2" order="first"
                             provider="sap.commerce.toolset.ccv2.options.CCv2ExecProjectSettingsConfigurableProvider"/>
    </extensions>

    <actions>
        <action id="ccv2.open.settings.action" class="sap.commerce.toolset.ccv2.actionSystem.CCv2OpenSettingsAction"/>
        <action id="ccv2.reset.cache.action" class="sap.commerce.toolset.ccv2.actionSystem.CCv2ResetCacheAction"/>

        <group id="ccv2.toolbar.actions">
            <action class="sap.commerce.toolset.ccv2.actionSystem.CCv2FetchEnvironmentsAction"/>
            <action class="sap.commerce.toolset.ccv2.actionSystem.CCv2FetchDeploymentsAction"/>
            <action class="sap.commerce.toolset.ccv2.actionSystem.CCv2FetchBuildsAction"/>
            <action class="sap.commerce.toolset.ccv2.actionSystem.CCv2CreateBuildAction"/>

            <reference ref="ccv2.reset.cache.action"/>
            <separator/>

            <group id="ccv2.toolbar.actions.show" text="View Options"
                   popup="true"
                   icon="AllIcons.Actions.Show">
                <separator text="Show With Status"/>
                <action class="sap.commerce.toolset.ccv2.actionSystem.CCv2ShowSuccessBuildsAction"/>
                <action class="sap.commerce.toolset.ccv2.actionSystem.CCv2ShowScheduledBuildsAction"/>
                <action class="sap.commerce.toolset.ccv2.actionSystem.CCv2ShowBuildingBuildsAction"/>
                <action class="sap.commerce.toolset.ccv2.actionSystem.CCv2ShowFailedBuildsAction"/>
                <action class="sap.commerce.toolset.ccv2.actionSystem.CCv2ShowDeletedBuildsAction"/>
                <action class="sap.commerce.toolset.ccv2.actionSystem.CCv2ShowUnknownBuildsAction"/>

                <action class="sap.commerce.toolset.ccv2.actionSystem.CCv2ShowProvisioningEnvironmentsAction"/>
                <action class="sap.commerce.toolset.ccv2.actionSystem.CCv2ShowAvailableEnvironmentsAction"/>
                <action class="sap.commerce.toolset.ccv2.actionSystem.CCv2ShowTerminatingEnvironmentsAction"/>
                <action class="sap.commerce.toolset.ccv2.actionSystem.CCv2ShowTerminatedEnvironmentsAction"/>
            </group>
            <separator/>

            <reference ref="ccv2.open.settings.action"/>
        </group>

        <group id="ccv2.environment.toolbar.actions">
            <reference ref="ccv2.open.settings.action"/>
            <separator/>
        </group>

        <group id="ccv2.service.toolbar.actions">
            <reference ref="ccv2.open.settings.action"/>
            <separator/>
        </group>
    </actions>

    <actions>
        <action class="sap.commerce.toolset.ccv2.actionSystem.CCv2GroovyReplicaSelectionModeAction">
            <add-to-group group-id="hybris.groovy.toolbar.mode"/>
        </action>
    </actions>

</idea-plugin>
