<idea-plugin>

    <extensions defaultExtensionNs="sap.commerce.toolset">
        <project.postImportLegacyConfigurator implementation="sap.commerce.toolset.ccv2.project.configurator.CCv2YFacetConfigurator"/>

        <project.module.rootResolver order="after yCustomModuleRootResolver" id="ccv2CoreCustomizeModuleRootResolver"
                                     implementation="sap.commerce.toolset.ccv2.project.module.CCv2CoreCustomizeModuleRootResolver"/>
        <project.module.rootResolver order="after yCustomModuleRootResolver" id="ccv2DataHubModuleRootResolver"
                                     implementation="sap.commerce.toolset.ccv2.project.module.CCv2DataHubModuleRootResolver"/>
        <project.module.rootResolver order="after yCustomModuleRootResolver" id="ccv2JsStorefrontModuleRootResolver"
                                     implementation="sap.commerce.toolset.ccv2.project.module.CCv2JsStorefrontModuleRootResolver"/>

        <project.importConfigurator order="after projectSettingsConfigurator"
                                    implementation="sap.commerce.toolset.ccv2.project.configurator.CCv2ProjectSettingsConfigurator"/>

        <project.module.descriptorProvider implementation="sap.commerce.toolset.ccv2.project.descriptor.provider.CCv2CoreModuleDescriptorProvider"/>
        <project.module.descriptorProvider implementation="sap.commerce.toolset.ccv2.project.descriptor.provider.CCv2StorefrontModuleDescriptorProvider"/>
        <project.module.descriptorProvider implementation="sap.commerce.toolset.ccv2.project.descriptor.provider.CCv2DatahubModuleDescriptorProvider"/>

        <project.module.provider implementation="sap.commerce.toolset.ccv2.project.configurator.CCv2ModuleProvider"/>
        <project.module.importConfigurator implementation="sap.commerce.toolset.ccv2.project.configurator.CCv2ModuleImportConfigurator"/>
    </extensions>

</idea-plugin>
