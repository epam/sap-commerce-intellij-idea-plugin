<idea-plugin>

    <extensions defaultExtensionNs="sap.commerce.toolset">
        <project.importConfigurator implementation="sap.commerce.toolset.java.configurator.JavaSdkConfigurator"/>

        <project.libraryConfigurator implementation="sap.commerce.toolset.java.configurator.library.PlatformBootstrapProjectLibraryConfigurator"/>
        <project.libraryConfigurator implementation="sap.commerce.toolset.java.configurator.library.BackofficeProjectLibraryConfigurator"/>
        <project.libraryConfigurator implementation="sap.commerce.toolset.java.configurator.library.HacProjectLibraryConfigurator"/>
        <project.libraryConfigurator implementation="sap.commerce.toolset.java.configurator.library.HmcProjectLibraryConfigurator"/>
        <project.libraryConfigurator implementation="sap.commerce.toolset.java.configurator.library.DatabaseDriversProjectLibraryConfigurator"/>
        <project.libraryConfigurator implementation="sap.commerce.toolset.java.configurator.library.LicenseProjectLibraryConfigurator"/>

        <project.postImportConfigurator implementation="sap.commerce.toolset.java.configurator.JavaLibrarySourcesConfigurator"/>
        <project.postImportLegacyConfigurator implementation="sap.commerce.toolset.java.configurator.JavadocsProjectImportConfigurator"/>
        <project.whenSmartConfigurator implementation="sap.commerce.toolset.java.configurator.JavaCompilerConfigurator"/>

        <project.module.provider implementation="sap.commerce.toolset.java.configurator.JavaModuleProvider"/>
        <project.module.importConfigurator order="first" id="javaModuleReadonlyConfigurator"
                                           implementation="sap.commerce.toolset.java.configurator.JavaModuleReadonlyConfigurator"/>
        <project.module.importConfigurator order="after javaModuleReadonlyConfigurator" id="javaModuleSdkConfigurator"
                                           implementation="sap.commerce.toolset.java.configurator.JavaModuleSdkConfigurator"/>
        <project.module.importConfigurator order="after javaModuleSdkConfigurator" id="javaModuleSourceConfigurator"
                                           implementation="sap.commerce.toolset.java.configurator.JavaModuleSourceConfigurator"/>
        <project.module.importConfigurator order="after javaModuleSourceConfigurator" id="javaModuleSettingsConfigurator"
                                           implementation="sap.commerce.toolset.java.configurator.JavaModuleSettingsConfigurator"/>
        <project.module.importConfigurator order="after javaModuleSettingsConfigurator" id="javaModuleLibrariesConfigurator"
                                           implementation="sap.commerce.toolset.java.configurator.JavaModuleLibrariesConfigurator"/>
        <project.module.importConfigurator order="after javaModuleLibrariesConfigurator" id="javaModuleContentRootsConfigurator"
                                           implementation="sap.commerce.toolset.java.configurator.JavaModuleContentRootsConfigurator"/>

        <project.module.contentRootEntryConfigurator implementation="sap.commerce.toolset.java.configurator.contentEntry.ExcludeAcceleratorAddonWebContentRootEntryConfigurator"/>
        <project.module.contentRootEntryConfigurator implementation="sap.commerce.toolset.java.configurator.contentEntry.ExcludeDecompiledSourcesContentRootEntryConfigurator"/>
        <project.module.contentRootEntryConfigurator implementation="sap.commerce.toolset.java.configurator.contentEntry.ExcludeClassesContentRootEntryConfigurator"/>
        <project.module.contentRootEntryConfigurator implementation="sap.commerce.toolset.java.configurator.contentEntry.ExcludeCommonsContentRootEntryConfigurator"/>
        <project.module.contentRootEntryConfigurator implementation="sap.commerce.toolset.java.configurator.contentEntry.ExcludeResourcesContentRootEntryConfigurator"/>
        <project.module.contentRootEntryConfigurator implementation="sap.commerce.toolset.java.configurator.contentEntry.ExcludeWebTestClassesContentRootEntryConfigurator"/>
        <project.module.contentRootEntryConfigurator implementation="sap.commerce.toolset.java.configurator.contentEntry.ExcludePlatformContentRootEntryConfigurator"/>
        <project.module.contentRootEntryConfigurator implementation="sap.commerce.toolset.java.configurator.contentEntry.ExcludeWebInjectedSourcesContentRootEntryConfigurator"/>
        <project.module.contentRootEntryConfigurator implementation="sap.commerce.toolset.java.configurator.contentEntry.PlatformContentRootEntryConfigurator"/>
        <project.module.contentRootEntryConfigurator implementation="sap.commerce.toolset.java.configurator.contentEntry.ResourcesContentRootEntryConfigurator"/>
        <project.module.contentRootEntryConfigurator implementation="sap.commerce.toolset.java.configurator.contentEntry.SourcesContentRootEntryConfigurator"/>
        <project.module.contentRootEntryConfigurator implementation="sap.commerce.toolset.java.configurator.contentEntry.TestSourcesContentRootEntryConfigurator"/>
        <project.module.contentRootEntryConfigurator implementation="sap.commerce.toolset.java.configurator.contentEntry.WebInjectedSourcesContentRootEntryConfigurator"/>

        <project.module.libraryConfigurator order="first" id="compileModuleLibraryConfigurator"
                                            implementation="sap.commerce.toolset.java.configurator.library.CompileModuleLibraryConfigurator"/>
        <project.module.libraryConfigurator order="after compileModuleLibraryConfigurator" id="testModuleLibraryConfigurator"
                                            implementation="sap.commerce.toolset.java.configurator.library.TestModuleLibraryConfigurator"/>
        <project.module.libraryConfigurator implementation="sap.commerce.toolset.java.configurator.library.BackofficeModuleLibraryConfigurator"/>
        <project.module.libraryConfigurator implementation="sap.commerce.toolset.java.configurator.library.CoreModuleLibraryConfigurator"/>
        <project.module.libraryConfigurator implementation="sap.commerce.toolset.java.configurator.library.ConfigModuleLibraryConfigurator"/>
        <project.module.libraryConfigurator implementation="sap.commerce.toolset.java.configurator.library.PlatformModuleLibraryConfigurator"/>
        <project.module.libraryConfigurator implementation="sap.commerce.toolset.java.configurator.library.HmcModuleLibraryConfigurator"/>
        <project.module.libraryConfigurator implementation="sap.commerce.toolset.java.configurator.library.HacModuleLibraryConfigurator"/>
        <project.module.libraryConfigurator implementation="sap.commerce.toolset.java.configurator.library.AddonModuleLibraryConfigurator"/>

        <project.storage.cleanupConfigurator order="after cleanupLibrariesStorageConfigurator"
                                             implementation="sap.commerce.toolset.java.configurator.entities.CleanupProjectLibrariesStorageConfigurator"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <defaultLiveTemplates file="liveTemplates/Java.xml"/>

        <codeInsight.lineMarkerProvider language="JAVA" implementationClass="sap.commerce.toolset.java.codeInsight.daemon.PopulatorsLineMarkerProvider"/>

        <codeInsight.declarativeInlayProvider language="JAVA"
                                              implementationClass="sap.commerce.toolset.java.codeInsight.hints.DynamicAttributeDeclarativeInlayProvider"
                                              isEnabledByDefault="true"
                                              group="METHOD_CHAINS_GROUP"
                                              providerId="hybris.typeSystem"
                                              bundle="i18n.HybrisBundle"
                                              nameKey="hybris.editor.java.inlay_provider.dynamic_attribute.name"
                                              descriptionKey="hybris.editor.java.inlay_provider.dynamic_attribute.description"/>
        <codeInsight.inlayActionHandler handlerId="inlay.hybris.dynamic.attribute"
                                        implementationClass="sap.commerce.toolset.java.codeInsight.hints.DynamicAttributeDeclarativeInlayActionHandler"/>
    </extensions>

</idea-plugin>
