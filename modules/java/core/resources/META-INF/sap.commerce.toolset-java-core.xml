<idea-plugin>

    <extensionPoints>
        <extensionPoint qualifiedName="sap.commerce.toolset.project.module.contentEntryConfigurator"
                        interface="sap.commerce.toolset.java.configurator.contentEntry.ModuleContentEntryConfigurator"
                        dynamic="true"/>
        <extensionPoint qualifiedName="sap.commerce.toolset.project.module.libraryConfigurator"
                        interface="sap.commerce.toolset.java.configurator.library.ModuleLibraryConfigurator"
                        dynamic="true"/>
    </extensionPoints>

    <extensions defaultExtensionNs="sap.commerce.toolset">
        <project.preImportConfigurator implementation="sap.commerce.toolset.java.configurator.JavaSdkConfigurator"/>
        <project.preImportConfigurator implementation="sap.commerce.toolset.java.configurator.ProjectPlatformBootstrapLibraryConfigurator"/>
        <project.preImportConfigurator implementation="sap.commerce.toolset.java.configurator.ProjectBackofficeLibraryConfigurator"/>

        <project.postImportConfigurator implementation="sap.commerce.toolset.java.configurator.JavaLibrarySourcesConfigurator"/>
        <project.postImportAsyncConfigurator implementation="sap.commerce.toolset.java.configurator.JavaCompilerConfigurator"/>

        <project.module.provider implementation="sap.commerce.toolset.java.configurator.JavaModuleProvider"/>
        <project.module.importConfigurator order="first" id="javaModuleReadonlyConfigurator"
                                           implementation="sap.commerce.toolset.java.configurator.JavaModuleReadonlyConfigurator"/>
        <project.module.importConfigurator order="after javaModuleReadonlyConfigurator" id="javaModuleSdkConfigurator"
                                           implementation="sap.commerce.toolset.java.configurator.JavaModuleSdkConfigurator"/>
        <project.module.importConfigurator order="after javaModuleSdkConfigurator" id="javaModuleJavadocsConfigurator"
                                           implementation="sap.commerce.toolset.java.configurator.JavaModuleJavadocsConfigurator"/>
        <project.module.importConfigurator order="after javaModuleSdkConfigurator" id="javaModuleSettingsConfigurator"
                                           implementation="sap.commerce.toolset.java.configurator.JavaModuleSettingsConfigurator"/>
        <project.module.importConfigurator order="after javaModuleJavadocsConfigurator" id="javaModuleLibrariesConfigurator"
                                           implementation="sap.commerce.toolset.java.configurator.JavaModuleLibrariesConfigurator"/>
        <project.module.importConfigurator order="after javaModuleLibrariesConfigurator" id="javaModuleContentRootsConfigurator"
                                           implementation="sap.commerce.toolset.java.configurator.JavaModuleContentRootsConfigurator"/>

        <project.module.contentEntryConfigurator implementation="sap.commerce.toolset.java.configurator.contentEntry.ContentEntryExcludeAcceleratorAddonWebConfigurator"/>
        <project.module.contentEntryConfigurator implementation="sap.commerce.toolset.java.configurator.contentEntry.ContentEntryExcludeClassesConfigurator"/>
        <project.module.contentEntryConfigurator implementation="sap.commerce.toolset.java.configurator.contentEntry.ContentEntryExcludeCommonsConfigurator"/>
        <project.module.contentEntryConfigurator implementation="sap.commerce.toolset.java.configurator.contentEntry.ContentEntryExcludeResourcesConfigurator"/>
        <project.module.contentEntryConfigurator implementation="sap.commerce.toolset.java.configurator.contentEntry.ContentEntryExcludeWebTestClassesConfigurator"/>
        <project.module.contentEntryConfigurator implementation="sap.commerce.toolset.java.configurator.contentEntry.ContentEntryExcludePlatformConfigurator"/>
        <project.module.contentEntryConfigurator implementation="sap.commerce.toolset.java.configurator.contentEntry.ContentEntryPlatformConfigurator"/>
        <project.module.contentEntryConfigurator implementation="sap.commerce.toolset.java.configurator.contentEntry.ContentEntryResourcesConfigurator"/>
        <project.module.contentEntryConfigurator implementation="sap.commerce.toolset.java.configurator.contentEntry.ContentEntrySourcesConfigurator"/>
        <project.module.contentEntryConfigurator implementation="sap.commerce.toolset.java.configurator.contentEntry.ContentEntryTestSourcesConfigurator"/>
        <project.module.contentEntryConfigurator implementation="sap.commerce.toolset.java.configurator.contentEntry.ContentEntryWebInjectedSourcesConfigurator"/>

<!--        <project.module.libraryConfigurator implementation="sap.commerce.toolset.java.configurator.library.ModuleBackofficeLibraryConfigurator"/>-->
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <defaultLiveTemplates file="liveTemplates/Java.xml"/>

        <codeInsight.lineMarkerProvider language="JAVA" implementationClass="sap.commerce.toolset.java.codeInsight.daemon.PopulatorsLineMarkerProvider"/>

        <codeInsight.declarativeInlayProvider language="JAVA"
                                              implementationClass="sap.commerce.toolset.java.codeInsight.hints.DynamicAttributeDeclarativeInlayProvider"
                                              isEnabledByDefault="true"
                                              group="METHOD_CHAINS_GROUP"
                                              providerId="hybris.typeSystem"
                                              bundle="i18n.HybrisBundle"
                                              nameKey="hybris.editor.java.inlay_provider.dynamic_attribute.name"
                                              descriptionKey="hybris.editor.java.inlay_provider.dynamic_attribute.description"/>
        <codeInsight.inlayActionHandler handlerId="inlay.hybris.dynamic.attribute"
                                        implementationClass="sap.commerce.toolset.java.codeInsight.hints.DynamicAttributeDeclarativeInlayActionHandler"/>
    </extensions>

</idea-plugin>
