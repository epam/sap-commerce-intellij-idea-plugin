<idea-plugin>

    <extensions defaultExtensionNs="sap.commerce.toolset">
        <ui.toolWindowProvider implementation="sap.commerce.toolset.logging.ui.CxLoggingToolWindowContentProvider"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <codeInsight.daemonBoundCodeVisionProvider implementation="sap.commerce.toolset.logging.codeInsight.hints.CxLoggerInlayHintsProvider"/>
    </extensions>

    <actions>
        <action id="sap.cx.loggers.remote.fetch" class="sap.commerce.toolset.logging.actionSystem.CxFetchRemoteLogStateAction"/>
        <action id="sap.cx.loggers.create.custom.template" class="sap.commerce.toolset.logging.actionSystem.CxCreateCustomTemplateStateAction"/>

        <action id="sap.cx.loggers.applyLogTemplate" class="sap.commerce.toolset.logging.actionSystem.CxApplyLogTemplateAction"/>

        <action id="sap.cx.loggers.custom.addTemplate" class="sap.commerce.toolset.logging.actionSystem.CxAddCustomLogTemplateAction"/>
        <action id="sap.cx.loggers.custom.deleteTemplate" class="sap.commerce.toolset.logging.actionSystem.CxDeleteCustomLogTemplateAction"/>
        <action id="sap.cx.loggers.custom.editTemplate" class="sap.commerce.toolset.logging.actionSystem.CxEditCustomLogTemplateAction"/>
        <action id="sap.cx.loggers.custom.deleteLogger" class="sap.commerce.toolset.logging.actionSystem.CxDeleteCustomLoggerAction"/>

        <group id="sap.cx.loggers.bundled.template.item.actions" searchable="false">
            <reference ref="sap.cx.loggers.applyLogTemplate"/>
            <reference ref="sap.cx.loggers.create.custom.template"/>
        </group>

        <group id="sap.cx.loggers.template.item.actions" searchable="false">
            <reference ref="sap.cx.loggers.applyLogTemplate"/>
            <reference ref="sap.cx.loggers.create.custom.template"/>
            <reference ref="sap.cx.loggers.custom.editTemplate"/>
            <reference ref="sap.cx.loggers.custom.deleteTemplate"/>
        </group>

        <group id="sap.cx.loggers.toolbar.actions" searchable="false">
            <reference ref="sap.commerce.toolset.hac.chooseConnection"/>
            <reference ref="sap.cx.loggers.remote.fetch"/>
        </group>

        <group id="sap.cx.logging.actions" popup="true" searchable="false">
            <reference ref="sap.cx.loggers.remote.fetch"/>

            <separator text="Active Connection"/>
            <reference ref="sap.commerce.toolset.hac.chooseConnection"/>

            <separator text="Log Levels"/>
            <action class="sap.commerce.toolset.logging.actionSystem.CxOffLoggerLevelAction"/>
            <action class="sap.commerce.toolset.logging.actionSystem.CxAllLoggerLevelAction"/>
            <action class="sap.commerce.toolset.logging.actionSystem.CxTraceLoggerLevelAction"/>
            <action class="sap.commerce.toolset.logging.actionSystem.CxDebugLoggerLevelAction"/>
            <action class="sap.commerce.toolset.logging.actionSystem.CxInfoLoggerLevelAction"/>
            <action class="sap.commerce.toolset.logging.actionSystem.CxWarnLoggerLevelAction"/>
            <action class="sap.commerce.toolset.logging.actionSystem.CxErrorLoggerLevelAction"/>
            <action class="sap.commerce.toolset.logging.actionSystem.CxFatalLoggerLevelAction"/>
        </group>

        <group id="sap.cx.loggers.toolwindow.menu" popup="true" searchable="false" class="sap.commerce.toolset.logging.actionSystem.CxLogTemplateContextMenuActionGroup"/>
    </actions>
</idea-plugin>
