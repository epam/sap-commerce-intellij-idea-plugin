<idea-plugin>

    <extensions defaultExtensionNs="com.intellij">
        <codeInsight.daemonBoundCodeVisionProvider implementation="sap.commerce.toolset.logging.codeInsight.hints.LoggerInlayHintsProvider"/>
    </extensions>

    <actions>
        <action id="sap.cx.fetch.loggers.action" class="sap.commerce.toolset.logging.actionSystem.FetchLoggersStateAction"/>

        <action id="sap.cx.loggers.apply.bundle.template" class="sap.commerce.toolset.logging.actionSystem.ApplyBundledTemplateAction"/>

        <group id="sap.cx.loggers.toolbar.actions" searchable="false">
            <reference ref="sap.commerce.toolset.hac.chooseConnection"/>
            <reference ref="sap.cx.fetch.loggers.action"/>
        </group>

        <group id="sap.cx.logging.actions" popup="true" searchable="false">
            <reference ref="sap.cx.fetch.loggers.action"/>

            <separator text="Active Connection"/>
            <reference ref="sap.commerce.toolset.hac.chooseConnection"/>

            <separator text="Log Levels"/>
            <action class="sap.commerce.toolset.logging.actionSystem.OffLoggerAction"/>
            <action class="sap.commerce.toolset.logging.actionSystem.AllLoggerAction"/>
            <action class="sap.commerce.toolset.logging.actionSystem.TraceLoggerAction"/>
            <action class="sap.commerce.toolset.logging.actionSystem.DebugLoggerAction"/>
            <action class="sap.commerce.toolset.logging.actionSystem.InfoLoggerAction"/>
            <action class="sap.commerce.toolset.logging.actionSystem.WarnLoggerAction"/>
            <action class="sap.commerce.toolset.logging.actionSystem.ErrorLoggerAction"/>
            <action class="sap.commerce.toolset.logging.actionSystem.FatalLoggerAction"/>
        </group>

        <group id="sap.cx.loggers.toolwindow.menu" popup="true" searchable="false" class="sap.commerce.toolset.logging.actionSystem.CxLoggersContextMenuActionGroup"/>
    </actions>
</idea-plugin>
