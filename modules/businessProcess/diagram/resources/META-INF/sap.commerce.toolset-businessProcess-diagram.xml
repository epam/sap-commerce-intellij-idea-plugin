<idea-plugin>

    <extensions defaultExtensionNs="com.intellij">
        <additionalTextAttributes scheme="Default" file="colorSchemes/BpDiagramDefault.xml"/>
        <additionalTextAttributes scheme="Darcula" file="colorSchemes/BpDiagramDarcula.xml"/>

        <diagram.Provider id="HybrisBusinessProcessDiagramProvider"
                          implementation="sap.commerce.toolset.businessProcess.diagram.BpDiagramProvider"/>

        <runLineMarkerContributor language="XML" implementationClass="sap.commerce.toolset.businessProcess.execution.lineMarker.ShowBPDiagramRunLineMarkerContributor"/>
    </extensions>

    <actions>
        <action id="ShowBusinessProcessDiagram"
                class="sap.commerce.toolset.businessProcess.actionSystem.ShowBusinessProcessDiagramAction"
                text="Show Business Process Diagram">
        </action>
    </actions>

</idea-plugin>
