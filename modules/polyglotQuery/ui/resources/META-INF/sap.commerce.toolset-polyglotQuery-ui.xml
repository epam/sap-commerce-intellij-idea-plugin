<idea-plugin>

    <extensions defaultExtensionNs="com.intellij">
        <colorSettingsPage implementation="sap.commerce.toolset.polyglotQuery.highlighting.PolyglotQueryColorSettingsPage"/>
        <codeStyleSettingsProvider implementation="sap.commerce.toolset.polyglotQuery.formatting.PgQCodeStyleSettingsProvider"/>
        <lang.parserDefinition language="Polyglot Query" implementationClass="sap.commerce.toolset.polyglotQuery.PolyglotQueryParserDefinition"/>
        <lang.syntaxHighlighterFactory language="Polyglot Query" implementationClass="sap.commerce.toolset.polyglotQuery.highlighting.PolyglotQuerySyntaxHighlighterFactory"/>
        <annotator language="Polyglot Query" implementationClass="sap.commerce.toolset.polyglotQuery.lang.annotation.PolyglotQueryAnnotator"/>
        <editorNotificationProvider id="pgqEditorNotificationProvider" implementation="sap.commerce.toolset.polyglotQuery.ui.PolyglotQueryEditorNotificationProvider"/>

        <projectConfigurable id="hybris.project.pgq.settings" parentId="hybris.project.settings" nonDefaultProject="true" dynamic="true"
                             bundle="i18n.HybrisBundle" key="hybris.settings.project.pgq.title"
                             order="after hybris.project.fxs.settings"
                             provider="sap.commerce.toolset.polyglotQuery.options.ProjectPolyglotQuerySettingsConfigurableProvider"/>
    </extensions>

    <actions>
        <action id="PolyglotQuery.NewPolyglotQueryFile"
                class="sap.commerce.toolset.polyglotQuery.actionSystem.PolyglotQueryFileCreateAction">
            <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFile"/>
        </action>

        <action id="hybris.pgq.openSettings" class="sap.commerce.toolset.polyglotQuery.actionSystem.PolyglotQueryOpenSettingsAction"/>

        <group id="hybris.pgq.toolbar.left">
            <reference ref="hybris.fxs.executionContextSettings"/>
            <separator/>
            <action id="hybris.pgq.execute" class="sap.commerce.toolset.polyglotQuery.actionSystem.PolyglotQueryExecuteAction">
                <keyboard-shortcut first-keystroke="shift alt ENTER" keymap="$default"/>
            </action>
            <action class="sap.commerce.toolset.polyglotQuery.actionSystem.PolyglotOpenInConsoleAction"/>
            <separator/>
            <action class="sap.commerce.toolset.polyglotQuery.actionSystem.PolyglotQueryToggleRetrieveAllDataAction"/>
            <action class="sap.commerce.toolset.polyglotQuery.actionSystem.PolyglotQueryToggleInEditorResultsAction"/>
            <action class="sap.commerce.toolset.polyglotQuery.actionSystem.PolyglotQueryToggleInEditorParametersAction"/>
            <separator/>
            <reference ref="hybris.pgq.openSettings"/>
        </group>
        <group id="hybris.pgq.toolbar.right">
            <reference ref="sap.commerce.toolset.hac.chooseConnection"/>
        </group>
    </actions>

</idea-plugin>
