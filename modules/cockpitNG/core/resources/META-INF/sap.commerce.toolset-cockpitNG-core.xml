<idea-plugin>

    <extensions defaultExtensionNs="com.intellij">
        <dom.extender domClass="sap.commerce.toolset.cockpitNG.model.config.Context"
                      extenderClass="sap.commerce.toolset.cockpitNG.CngConfigDomExtender"/>
        <dom.fileMetaData rootTagName="config" stubVersion="4"
                          implementation="sap.commerce.toolset.cockpitNG.CngConfigDomFileDescription"/>
        <dom.fileMetaData rootTagName="widgets" stubVersion="5"
                          implementation="sap.commerce.toolset.cockpitNG.CngWidgetsDomFileDescription"/>
        <dom.fileMetaData rootTagName="action-definition" stubVersion="4"
                          implementation="sap.commerce.toolset.cockpitNG.CngActionDefinitionDomFileDescription"/>
        <dom.fileMetaData rootTagName="widget-definition" stubVersion="5"
                          implementation="sap.commerce.toolset.cockpitNG.CngWidgetDefinitionDomFileDescription"/>
        <dom.fileMetaData rootTagName="editor-definition" stubVersion="4"
                          implementation="sap.commerce.toolset.cockpitNG.CngEditorDefinitionDomFileDescription"/>

        <lang.foldingBuilder language="XML" implementationClass="sap.commerce.toolset.cockpitNG.lang.folding.CngConfigFoldingBuilder"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <localInspection language="XML" enabledByDefault="true" groupPath="SAP Commerce" groupName="[y] Cockpit NG"
                         bundle="i18n.HybrisBundle" key="hybris.inspections.DomElementsInspection.key"
                         shortName="CngConfigDomElementsInspection" level="ERROR"
                         implementationClass="sap.commerce.toolset.cockpitNG.codeInspection.CngConfigDomInspection"/>
        <localInspection language="XML" enabledByDefault="true" groupPath="SAP Commerce" groupName="[y] Cockpit NG"
                         bundle="i18n.HybrisBundle" key="hybris.inspections.DomElementsInspection.key"
                         shortName="CngActionsDomElementsInspection" level="ERROR"
                         implementationClass="sap.commerce.toolset.cockpitNG.codeInspection.CngActionsDomInspection"/>
        <localInspection language="XML" enabledByDefault="true" groupPath="SAP Commerce" groupName="[y] Cockpit NG"
                         bundle="i18n.HybrisBundle" key="hybris.inspections.DomElementsInspection.key"
                         shortName="CngWidgetsDomElementsInspection" level="ERROR"
                         implementationClass="sap.commerce.toolset.cockpitNG.codeInspection.CngWidgetsDomInspection"/>
        <localInspection language="XML" enabledByDefault="true" groupPath="SAP Commerce" groupName="[y] Cockpit NG"
                         bundle="i18n.HybrisBundle" key="hybris.inspections.cng.ContextMergeByPointToExistingContextAttribute.key"
                         shortName="CngContextMergeByPointToExistingContextAttribute" level="ERROR"
                         implementationClass="sap.commerce.toolset.cockpitNG.codeInspection.CngContextMergeByPointToExistingContextAttribute"/>
        <localInspection language="XML" enabledByDefault="true" groupPath="SAP Commerce" groupName="[y] Cockpit NG"
                         bundle="i18n.HybrisBundle" key="hybris.inspections.cng.ContextParentIsNotValid.key"
                         shortName="CngContextParentIsNotValid" level="ERROR"
                         implementationClass="sap.commerce.toolset.cockpitNG.codeInspection.CngContextParentIsNotValid"/>
        <localInspection language="XML" enabledByDefault="true" groupPath="SAP Commerce" groupName="[y] Cockpit NG"
                         bundle="i18n.HybrisBundle" key="hybris.inspections.cng.CngContextMergeByTypeParentIsNotValid.key"
                         shortName="CngContextMergeByTypeParentIsNotValid" level="ERROR"
                         implementationClass="sap.commerce.toolset.cockpitNG.codeInspection.CngContextMergeByTypeParentIsNotValid"/>
    </extensions>

</idea-plugin>
