<idea-plugin>

    <extensions defaultExtensionNs="com.intellij">
        <codeStyleSettingsProvider implementation="sap.commerce.toolset.acl.formatting.AclCodeStyleSettingsProvider"/>
        <langCodeStyleSettingsProvider implementation="sap.commerce.toolset.acl.formatting.AclLanguageCodeStyleSettingsProvider"/>

        <codeFoldingOptionsProvider instance="sap.commerce.toolset.acl.options.AclCodeFoldingOptionsProvider"/>
    </extensions>

    <actions>
        <action id="hybris.impex.extractAcl" class="sap.commerce.toolset.acl.actionSystem.ImpExExtractAclAction"/>

        <action id="Acl.NewAclFile" class="sap.commerce.toolset.acl.actionSystem.AclFileCreateAction"
                text="Access Control Lists File" description="Create new Access control lists file">
            <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFile"/>
        </action>

        <group id="hybris.acl.toolbar.left">
            <reference ref="hybris.impex.executionContextSettings"/>
            <separator/>
            <action id="hybris.acl.import" class="sap.commerce.toolset.acl.actionSystem.AclExecuteAction">
                <keyboard-shortcut first-keystroke="shift alt ENTER" keymap="$default"/>
            </action>
            <action id="hybris.acl.openQuery" class="sap.commerce.toolset.acl.actionSystem.AclOpenInConsoleAction">
                <keyboard-shortcut first-keystroke="control shift alt O" keymap="$default"/>
            </action>
            <action id="hybris.acl.validate" class="sap.commerce.toolset.acl.actionSystem.AclValidateAction">
                <keyboard-shortcut first-keystroke="control alt V" keymap="$default"/>
            </action>
            <separator/>
            <action class="sap.commerce.toolset.acl.actionSystem.AclToggleInEditorResultsAction"/>
        </group>
        <group id="hybris.acl.toolbar.right">
            <reference ref="sap.commerce.toolset.hac.chooseConnection"/>
        </group>
    </actions>
</idea-plugin>
