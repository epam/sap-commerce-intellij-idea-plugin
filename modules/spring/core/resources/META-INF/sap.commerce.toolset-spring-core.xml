<idea-plugin>

    <extensions defaultExtensionNs="com.intellij">
        <codeInsight.lineMarkerProvider language="XML" implementationClass="sap.commerce.toolset.spring.codeInsight.daemon.ItemsXmlInterceptorLineMarkerProvider"/>
        <codeInsight.lineMarkerProvider language="XML" implementationClass="sap.commerce.toolset.spring.codeInsight.daemon.ItemsXmlAttributeHandlerLineMarkerProvider"/>
        <codeInsight.lineMarkerProvider language="JAVA" implementationClass="sap.commerce.toolset.spring.codeInsight.daemon.ModelItemInterceptorLineMarkerProvider"/>

        <psi.referenceContributor language="XML" implementation="sap.commerce.toolset.spring.psi.contributor.SpringReferenceContributor"/>
    </extensions>

    <extensions defaultExtensionNs="sap.commerce.toolset">
        <impex.interceptorProvider implementation="sap.commerce.toolset.spring.impex.SpringInterceptorProvider"/>

        <project.startupConfigurator implementation="sap.commerce.toolset.spring.configurator.SpringConfigurator"/>
        <project.preImportConfigurator implementation="sap.commerce.toolset.spring.configurator.SpringConfigurator"/>
        <project.importConfigurator implementation="sap.commerce.toolset.spring.configurator.SpringConfigurator"/>

        <project.module.facetConfigurator implementation="sap.commerce.toolset.spring.configurator.SpringFacetConfigurator"/>

        <shared.springService implementation="sap.commerce.toolset.spring.AdvancedSpringService"/>
    </extensions>

</idea-plugin>
