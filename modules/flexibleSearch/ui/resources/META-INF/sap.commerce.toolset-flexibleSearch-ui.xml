<idea-plugin>

    <extensions defaultExtensionNs="com.intellij">
        <editorNotificationProvider id="fxsReservedWordsCaseEditorNotificationProvider" implementation="sap.commerce.toolset.flexibleSearch.editor.FxSReservedWordsCaseEditorNotificationProvider"/>
        <editorNotificationProvider id="fxsTableAliasSeparatorEditorNotificationProvider" implementation="sap.commerce.toolset.flexibleSearch.editor.FxSTableAliasSeparatorEditorNotificationProvider"/>

        <projectConfigurable id="hybris.project.fxs.settings" parentId="hybris.project.settings"
                             nonDefaultProject="true" dynamic="true"
                             bundle="i18n.HybrisBundle" key="hybris.settings.project.fxs.title"
                             order="after hybris.project.integrations.settings"
                             provider="sap.commerce.toolset.flexibleSearch.options.ProjectFlexibleSearchSettingsConfigurableProvider"/>
    </extensions>

    <actions>
        <action id="FlexibleSearch.NewFlexibleSearchFile"
                class="sap.commerce.toolset.flexibleSearch.actionSystem.FlexibleSearchFileCreateAction"
                text="FlexibleSearch File" description="Create new FlexibleSearch file">
            <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFile"/>
        </action>

        <group id="FSRemoteControl.Actions" class="sap.commerce.toolset.flexibleSearch.actionSystem.FlexibleSearchActionsGroup">
            <action id="hybris.fxs.execute" class="sap.commerce.toolset.flexibleSearch.actionSystem.FlexibleSearchExecuteAction">
                <keyboard-shortcut first-keystroke="shift alt ENTER" keymap="$default"/>
            </action>

            <add-to-group group-id="CodeMenu" anchor="last"/>
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </group>

        <action id="hybris.fxs.openQuery" class="sap.commerce.toolset.flexibleSearch.actionSystem.FlexibleSearchOpenInConsoleAction"/>
        <action id="hybris.fxs.openSettings" class="sap.commerce.toolset.flexibleSearch.actionSystem.FlexibleSearchOpenSettingsAction"/>
        <action id="hybris.fxs.toggleParameters" class="sap.commerce.toolset.flexibleSearch.actionSystem.FlexibleSearchToggleInEditorParametersAction"/>
        <action id="hybris.fxs.toggleInEditorResults" class="sap.commerce.toolset.flexibleSearch.actionSystem.FlexibleSearchToggleInEditorResultsAction"/>
        <action id="hybris.fxs.copyToClipboard" class="sap.commerce.toolset.flexibleSearch.actionSystem.FlexibleSearchCopyToClipboardAction"/>
        <action id="hybris.fxs.executionContextSettings" class="sap.commerce.toolset.flexibleSearch.actionSystem.FlexibleSearchExecutionContextSettingsAction"/>

        <group id="hybris.fxs.toolbar.left">
            <reference ref="hybris.fxs.executionContextSettings"/>
            <separator/>
            <reference ref="hybris.fxs.execute"/>
            <reference ref="hybris.fxs.openQuery"/>
            <reference ref="hybris.fxs.copyToClipboard"/>
            <separator/>
            <reference ref="hybris.fxs.toggleInEditorResults"/>
            <reference ref="hybris.fxs.toggleParameters"/>
            <separator/>
            <reference ref="hybris.fxs.openSettings"/>
        </group>
        <group id="hybris.fxs.toolbar.right">
            <reference ref="sap.commerce.toolset.hac.chooseConnection"/>
        </group>
    </actions>

</idea-plugin>
